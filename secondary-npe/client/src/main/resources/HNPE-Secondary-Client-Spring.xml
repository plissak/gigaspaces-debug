<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xmlns:os-core="http://www.openspaces.org/schema/core"
	xmlns:os-jms="http://www.openspaces.org/schema/jms"
	xmlns:os-events="http://www.openspaces.org/schema/events"
	xmlns:os-remoting="http://www.openspaces.org/schema/remoting"

	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd
  http://www.openspaces.org/schema/core http://www.openspaces.org/schema/core/openspaces-core.xsd
  http://www.openspaces.org/schema/events http://www.openspaces.org/schema/events/openspaces-events.xsd
  http://www.openspaces.org/schema/remoting http://www.openspaces.org/schema/remoting/openspaces-remoting.xsd">

	<os-core:distributed-tx-manager
		id="transactionManager" />

	<bean id="hpneSecondaryRemoteGigaSpace"
		class="org.openspaces.core.space.UrlSpaceFactoryBean"
		p:url="jini://*/*/HibernateSecondaryNPE" p:versioned="true"
		p:userDetails-ref="userDetails" />

	<os-core:giga-space id="hpneSecondaryGigaSpace"
		space="hpneSecondaryRemoteGigaSpace" tx-manager="transactionManager" />

	<bean id="hpneReadAccess"
		class="gs.debug.hnpe.common.service.DebugReadAccess" autowire="byType"
		p:space-ref="hpneSecondaryGigaSpace" />

	<os-remoting:executor-proxy
		id="hpneSecondaryWriteAccess" giga-space="hpneSecondaryGigaSpace"
		interface="gs.debug.hnpe.common.service.DebugSecondaryWriteAccess" />

</beans>
